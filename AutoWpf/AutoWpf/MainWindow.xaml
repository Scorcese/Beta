<Window x:Class="AutoWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutoWpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="AuthorizationButton" Content="Авторизация" HorizontalAlignment="Left" Margin="342,0,0,0" VerticalAlignment="Center" Click="AuthorizationButton_Click"/>
        <TextBox x:Name="LoginTextBox" HorizontalAlignment="Left" Margin="320,88,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="PasswordTextBox" HorizontalAlignment="Left" Margin="320,136,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="RegistrationButton" Content="Регистрация" HorizontalAlignment="Left" Margin="345,250,0,0" VerticalAlignment="Top" Click="RegistrationButton_Click"/>
    </Grid>
</Window>
